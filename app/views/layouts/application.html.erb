<!DOCTYPE html>
<html>
  <head>
    <title>RailsMariosFood</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div id="logs">
      <% if current_user %>
        <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
      <% else %>
        <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
      <% end %>
    </div>

    <p id="homebtn"><%= link_to "Return to Homepage", root_path %></p>

    <div class="container">

      <%= flash[:alert] %>
      <%= flash[:notice] %>

      <div id="left"></div>
      <div id="right"></div>

      <%= yield %>
    </div>  
  </body>
</html>
