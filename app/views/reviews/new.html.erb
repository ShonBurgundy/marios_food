<div class ="box">
  <h1>Add a review:</h1>

  <%= form_for [@product, @review] do |f| %>
    <%= f.label :author %>
    <%= f.text_field :author %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
    <p><%= f.submit %></p>
  <% end %>
</div>  